<%- include("partials/header") %>

<style>
    .post-main {
        width:100%;
        min-height:80vh; 
        height: 100%;
        max-width: 1000px;
        margin: 5vh auto;
        background-color: #e3f7fc;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2.5em;
        color: #333;
        margin-bottom: 10px;
        text-align: center;
    }

    p em {
        display: block;
        font-size: 1em;
        color: #666;
        text-align: center;
        margin-bottom: 20px;
    }

    hr {
        background-color: #444;
        height: 2px;
        border: none;
        width: 80%;
        margin: 20px auto;
    }

    /* Ensure all images inside the .post-main class do not exceed the viewport width */
.post-main img {
    max-width: 90vw;           /* Maximum width of 90% of the viewport width */
    height: auto;              /* Maintain aspect ratio */
    display: block;            /* Remove inline spacing */
    margin: 0 auto;            /* Center the image horizontally */
    overflow-x: hidden;        /* Hide horizontal overflow */
}



    div {
        font-size: 1.2em;
        line-height: 1.6;
        color: #555;
    }

    @media (max-width: 768px) {
        .post-main {
            width: 95%;
            padding: 15px;
        }

        h1 {
            font-size: 2em;
        }

        div {
            font-size: 1em;
        }

        hr {
            width: 90%;
        }
        p{
            font-size: large;
        }
    }

    @media (max-width: 480px) {
        .post-main {
            padding: 10px;
        }

        h1 {
            font-size: 1.8em;
        }

        div {
            font-size: 0.9em;
        }
        /* Ensure all images inside the .post-main class do not exceed the viewport width */
.post-main img {
    max-width: 90vw;           /* Maximum width of 90% of the viewport width */
    height: auto;              /* Maintain aspect ratio */
    display: block;            /* Remove inline spacing */
    margin: 0 auto;            /* Center the image horizontally */
    overflow-x: hidden;        /* Hide horizontal overflow */
}

    }
</style>
<div>

<div class="post-main">
    <h1><%= title %></h1>

    <p><em>Published on <%= date %></em></p>
    <hr>
    <div><%- content %></div>
</div>
</div>
<%- include("partials/footer") %>
